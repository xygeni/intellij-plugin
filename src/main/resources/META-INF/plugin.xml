<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>xygeni</id>
    <name>__NAME__</name>
    <version>__VERSION__</version>
    <vendor>xygeni</vendor>

    <depends>com.intellij.modules.platform</depends>


    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="com.github.xygeni.intellij.page.DynamicHtmlEditorProvider"/>

        <projectConfigurable
                instance="com.github.xygeni.intellij.settings.XygeniSettingsConfigurable"
                displayName="Xygeni"
                parentId="tools"
                id="com.github.xygeni.intellij.settings.XygeniSettingsConfigurable"
        />

        <toolWindow factoryClass="com.github.xygeni.intellij.toolWindow.XygeniWindowFactory"
                    id="Xygeni plugin"
                    icon="Icons.XYGENI_ICON"
                    anchor="right"
        />

        <toolWindow id="Xygeni console"
                    anchor="bottom"
                    factoryClass="com.github.xygeni.intellij.toolWindow.ConsoleWindowFactory"
                    icon="Icons.XYGENI_ICON"
        />
    </extensions>

    <actions>
        <!-- Definimos un grupo -->
        <group id="Xygeni"
               text="Xygeni"
               description="Xygeni tools"
               popup="true"
               icon="Icons.XYGENI_ICON">
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <action id="Xygeni.InstallAction"
                    class="com.github.xygeni.intellij.actions.InstallAction"
                    text="Install"
                    icon="Icons.INSTALL_ICON">
            </action>
            <separator/>
        </group>
    </actions>
</idea-plugin>
